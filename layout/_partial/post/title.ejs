<% if (item.link){ %>
  <% if (item.title){ %>
    <h1 class="archivetitle"><a href="<%- item.link %>" class="post_title" target="_blank"><%= item.title %></a></h1>
  <% } else { %>
    <h1 class="archivetitle"><a href="<%- item.link %>" class="post_title" target="_blank"><%= item.link %></a></h1>
  <% } %>
<% } else { %>
  <% if (index){ %>
    <h1 class="archivetitle"><a href="<%- config.root %><%- item.path %>" class="post_title"><%= item.title %></a></h1>
  <% } else { %>
    <h1 class="archivetitle"><%= item.title %></h1>
  <% } %>
<% } %>
